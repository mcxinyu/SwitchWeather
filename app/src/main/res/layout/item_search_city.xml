<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="SearchCityBinding">
        <variable
                name="city"
                type="com.about.switchweather.Model.City"/>
    </data>

    <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            style="?android:attr/buttonStyle"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@{city.cityZh}"
                        android:id="@+id/city_name_item_search"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="@string/comma"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/cnty_name_item_search"
                        android:text="@{city.countryZh}"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/prov_name_item_search"
                    android:layout_marginLeft="5dp"
                    android:text="@{city.provinceZh}"
                    android:textSize="14sp"
                    android:textColor="@color/colorShadow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</layout>