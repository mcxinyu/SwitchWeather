<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          android:orientation="vertical"
          android:gravity="center_horizontal|center_vertical"
          android:clickable="true"
          android:background="?attr/selectableItemBackground"
          android:padding="5dp"
          android:layout_width="60dp"
          android:layout_height="match_parent">

    <TextView
        android:id="@+id/hourly_forecast_date_text_view"
        tools:text="8:24"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/hourly_forecast_icon_image_view"
        tools:src="@drawable/weather_icon_101"
        android:scaleType="centerInside"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/hourly_forecast_condition_text_view"
        tools:text="小雨"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/hourly_forecast_temperature_text_view"
        tools:text="28°"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>