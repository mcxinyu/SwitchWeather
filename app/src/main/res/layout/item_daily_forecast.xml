<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="48dp">
    <TextView
            android:id="@+id/daily_forecast_weekly_text_view"
            tools:text="星期三"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/daily_forecast_date_text_view"
            tools:text="8/24"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/daily_forecast_weekly_text_view"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/daily_forecast_center_view"
        android:layout_centerInParent="true"
        android:layout_width="8dp"
        android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/daily_forecast_icon_image_view"
            tools:src="@drawable/weather_icon_101"
            android:scaleType="centerInside"
            android:layout_toLeftOf="@id/daily_forecast_center_view"
            android:layout_centerInParent="true"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    <TextView
        android:id="@+id/daily_forecast_wind_text_view"
        tools:text="微风"
        android:textSize="13sp"
        android:textColor="@color/colorShadow3"
        android:layout_toRightOf="@id/daily_forecast_center_view"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/daily_forecast_temperature_text_view"
            tools:text="28° ~ 34°"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>