<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:layout_width="60dp"
              android:layout_height="match_parent">
    <TextView
            android:id="@+id/daily_forecast_weekly_text_view"
            android:text="星期三"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/daily_forecast_date_text_view"
            android:text="8.24"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/daily_forecast_icon_image_view"
            android:src="@drawable/weather_icon_101"
            android:scaleType="centerInside"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    <TextView
            android:id="@+id/daily_forecast_temperature_text_view"
            android:text="28°-34°"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/daily_forecast_wind_text_view"
            android:text="微风"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>